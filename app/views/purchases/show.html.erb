
<% breadcrumb :purchase, @purchase %>

<div class="page-header">
  <h3>进货详情 #<%= @purchase.id %></h3>
</div>

<div class="">
  <div class="panel panel-default">
    <div class="panel-heading">基本信息</div>
    <table class="table table-hover table-condensed table-bordered">
      <tr>
        <td>ID</td>
        <td><%= @purchase.id %></td>
      </tr>
      <tr>
        <td>进货时间</td>
        <td><%= short_date_time @purchase.created_at %></td>
      </tr>
      <tr>
        <td>操作员</td>
        <td><%= @purchase.user.real_name %></td>
      </tr>
    </table>
  </div>
</div>

<div class="">
  <div class="panel panel-default">
    <div class="panel-heading">进货零件</div>
    <table class="table table-hover table-condensed table-bordered">
      <thead>
        <tr>
          <th>#</th>
          <th>零件名称</th>
          <th>单位</th>
          <th>数量</th>
        </tr>
      </thead>
      <tbody>
      <% @purchase.purchase_records.each_with_index do |r, i| %>
        <tr>
          <td><%= i + 1 %></td>
          <td><%= r.product.name %></td>
          <td><%= r.unit.name %></td>
          <td><%= r.product_count %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>