
<div class="page-header">
  <h3>通知</h3>
</div>

<% @unread_notifitions.each do |notification| %>
  <div class="panel panel-info" id="notification_<%= notification.id %>">
    <div class="panel-heading">
      <div class="row">
        <div class="col-md-4"><%= short_date_time notification.created_at %></div>
        <div class="col-md-4 col-md-offset-4 text-right">
          <%= link_to "标记为已读", read_notification_path(notification), :class => "btn btn-default btn-xs", :id => "notification_#{notification.id}_link", :remote => true %>
        </div>
      </div>
    </div>
    <div class="panel-body">
      <%= notification.content %>
    </div>
  </div>
<% end %>

<% @readed_notifitions.each do |notification| %>
  <div class="panel panel-default">
    <div class="panel-heading">
      <div class="row">
        <div class="col-md-4"><%= short_date_time notification.created_at %></div>
        <div class="col-md-4 col-md-offset-4 text-right">
        </div>
      </div>
    </div>
    <div class="panel-body">
      <%= notification.content %>
    </div>
  </div>
<% end %>
